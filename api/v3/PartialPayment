<?php

function civicrm_api3_partial_payment_create($params) {
  return _civicrm_api3_basic_create(_civicrm_api3_get_BAO(__FUNCTION__), $params);
}


function _civicrm_api3_partial_payment_create_spec(&$params) {
  $params['payment_processor_type_id']['api.required'] = 1;
}


function civicrm_api3_partial_payment_delete($params) {
  return _civicrm_api3_basic_delete(_civicrm_api3_get_BAO(__FUNCTION__), $params);
}


function civicrm_api3_partial_payment_get($params) {
  return _civicrm_api3_basic_get(_civicrm_api3_get_BAO(__FUNCTION__), $params);
}
